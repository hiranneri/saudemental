<%- include('includes/head-cadastrousuario'); %>
<%- include('includes/nav'); %>
<div class="container" id="container">
  <div class="row">
    <div class="div col-lg-2"></div>
    <div class="div col-lg-8 my-3">
      <%- include("includes/messages"); %>
      <h1 class="text-center">Novo por aqui?</h1>
      <p class="text-center lead">Confirme se você é um psicólogo ou paciente</p>
      <button type="button" class="btn btn-info btnCadastroPaciente" onclick="showFormPaciente()">Paciente</button>
      <button type="button" class="btn btn-info btnCadastroPsicologo" onclick="showFormPsicologo()">Psicólogo</button>
    </p>
    </div>
    
  </div>
</div>
    <div class="container" id="containerForm">
      <div class="row">
        
            <div class="col-md-6">
              <form action="/cadastrar" method="POST" onshow=hideForm() id="formUsuario"  >
              <div class="form-group">
                  <label>(*) Campos Obrigatórios</label>                    
              </div>
              <div class="form-group">                
                <label for="email">*Email:</label>
                <input type="text" name="email" value="<%=email %>" required>
              </div> <br>
              <div class="form-group">
                <label for="senha">*Senha:</label>
                <input type="password" name="senha" required min="3" max="50" id="senha">
              </div>
              <div class="form-group">
                <label for="senha">*Confirme a Senha:</label>
                <input type="password" name="confirme" required id="confirme">
              </div><br>
            </div>
            <div class="col-md-6">
                  
                  <div class="form-group">
                    <label for="nome">*Nome:</label>
                    <input type="text" name="nome" required min="3" max="50">
                  </div>
                  <div class="form-group">
                    <label for="sobrenome">*Sobrenome</label>
                    <input type="text" name="sobrenome" required>
                  </div>
                  <div class="form-group">
                    <label for="datanascimento">*Data de Nascimento:</label>
                    <input type="date" name="datanascimento" id="datanascimento" required>
                  </div>             

                  <div class="form-group" name="areaEndereco">
                    <label for="cep" >CEP:</label>
                    <input type="text" name="cep" maxlength="8" id="cep" required>
                    <button type="button" class="btn btn-success" id="btnCEP" onclick="pesquisarPeloCEP()">Pesquisar</button>
                  </div>
                  <div class="form-group" name="areaEndereco">
                    <label for="cidade">*Cidade:</label>
                    <input type="text" name="cidade" id="cidade" required >
                  </div>
                  <div class="form-group" name="areaEndereco">
                    <label for="cidade">*Estado:</label>
                    <input type="text" name="estado" id="estado" required >
                  </div>
                 
                  <div class="form-group">
                    <label for="crp" id="lblcrp">*CRP:</label>
                    <input type="text" id="crp" name="crp">
                  </div>
                  <input type="button" onclick="validarCadastro()" class="btn btn-success" value="Cadastrar" id="btnCadastrar"></button>
            </div>
        </form>
      </div>
    </div>
  <%- include('includes/footer-cadastrousuario'); %>